{
    "name": "template-ts-eslint",
    "version": "1.0.0",
    "description": "Template for TypeScript + ESLint",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "build": "npm run clean && tsc --project ./dist.tsconfig.json",
        "bundle": "npx webpack",
        "lint": "npx eslint ./src/**/*"
    },
