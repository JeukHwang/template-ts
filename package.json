{
    "name": "template-ts-eslint",
    "version": "1.0.0",
    "description": "Template for TypeScript + ESLint",
    "main": "index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "build": "tsc --project dist.tsconfig.json",
        "reset": "npm run clean && npm run build",
        "lint": "npx eslint code/**/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JeukHwang/template-ts-eslint.git"
    },
