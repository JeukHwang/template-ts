    },
    "homepage": "https://github.com/JeukHwang/template-ts-eslint#readme",
    "devDependencies": {
        "@tsconfig/node16-strictest-esm": "^1.0.3",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "eslint": "^8.19.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "shx": "^0.3.4",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "ts-loader": "^9.3.1",
        "webpack-cli": "^4.10.0"
